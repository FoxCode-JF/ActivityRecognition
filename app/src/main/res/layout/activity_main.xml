<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/gyroscopeTxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gyroscope data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearAccelerationTxtView" />

    <TextView
        android:id="@+id/magnetometerTxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Magnetometer Data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gyroscopeTxtView" />

    <TextView
        android:id="@+id/accelTxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Accelerometer data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/linearAccelerationTxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Linear acceleration data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accelTxtView" />

    <TextView
        android:id="@+id/activityTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="72sp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/accelTxtView" />

</androidx.constraintlayout.widget.ConstraintLayout>